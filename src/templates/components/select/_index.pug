mixin select(placeholder, options, translate)
  .select.js-select
    label(data-lang=placeholder).select__label.js-select-label
    select&attributes(attributes).select__input.js-select-input
      option(value="-1")
      each item in options
        if translate
          option(value=item.value selected=item.selected data-lang=item.text)
        else
          option(value=item.value selected=item.selected)= item.text
