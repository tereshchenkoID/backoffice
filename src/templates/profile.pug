---
title: D-news
lang: en
---
extends layouts/_layout

block content
  main.main
    .paper
      .paper__heaadline
        h5 User Profile
      hr.paper__hr
      .paper__body
        .paper__form
          +field('Date', 'field--fixed')(type="date" required="true")
          +select('User type', [
            {
              value: 0,
              text: 'Type 1'
            },
            {
              value: 1,
              text: 'Type 2'
            },
          ])
          +field('Id')(type="text" value='1316' readonly='true')
          +field('Username or email')(type="text" value='manager' readonly='true')
          +field('Old Password', 'field--password')(type="password" required="true")
          +field('New Password', 'field--password')(type="password" required="true")
          +field('Confirm Password', 'field--password')(type="password" required="true")
          .paper__block
            +button('Save')(type="button").button--primary.u-mr-16
            +button('Cancel')(type="button").button--default
