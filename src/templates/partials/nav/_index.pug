mixin nav
  nav.nav&attributes(attributes)
    .nav__wrapper
      .nav__logo
        a(href="./index.html").logo
      hr.hr
      ul.hav__list
        each item in menu
          li.nav__item
            a(href=item.src?`${item.src}`:'#').nav__link.js-nav-link
              i.fa(class=item.icon).nav__icon
              span(data-lang=`${item.text}`)
              if item.list.length !== 0
                i.fa.fa-angle-down.nav__arrow
            .submenu.js-submenu
              each link in item.list
                a(href=link.link data-lang=`${link.text}`).submenu__item
